.tribe-events-pro {

	/* -----------------------------------------------------------------------------
	 * Event Cards
	 * ----------------------------------------------------------------------------- */

	.tribe-events-pro-map__event-column {

		&:before,
		&:after {
			background-color: var(--color-border-default);
			content: '';
			height: 100%;
			top: 0;
			position: absolute;
			width: 1px;
		}

		&:before {
			left: 0;
		}

		&:after {
			right: 0;
		}
	}

	.tribe-events-pro-map__event-cards-wrapper {

		&:hover .tribe-events-pro-map__event-cards-scroll-pane {
			opacity: var(--opacity-default);
		}

		&:before,
		&:after {
			background-color: var(--color-border-default);
			content: '';
			height: 1px;
			position: absolute;
			left: 0;
			width: 100%;
		}

		&:before {
			top: 0;
		}

		&:after {
			bottom: 0;
		}
	}

	.tribe-events-pro-map__event-cards {

		&:focus + .tribe-events-pro-map__event-cards-scroll-pane {
			opacity: var(--opacity-default);
		}
	}

	.tribe-events-pro-map__event-cards-scroll-pane {
		opacity: 0;
		transition: var(--transition-opacity);

		&.active {
			opacity: var(--opacity-default);
		}
	}
}
